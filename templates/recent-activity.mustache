{{!
    @template block_xp/recent-activity

    Recent activity list.

    Example context (json):
    {
    }
}}
<div class="block_xp-recent-activity">
    <h5 class="xp-uppercase xp-text-gray-400 xp-text-xxs xp-tracking-normal xp-mb-2">{{#str}}recentrewards, block_xp{{/str}}</h5>
    {{^hasrecentactivities}}
        <p>-</p>
    {{/hasrecentactivities}}
    {{#hasrecentactivities}}
        <div class="xp-space-y-0.5">
        {{#recentactivities}}
            <div class="activity-entry xp-text-xs xp-flex">
                <div class="xp-flex-none xp-text-gray-500 xp-order-1 xp-text-xxs" title="{{date}}">{{dateagotiny}}</div>
                <div class="xp-flex-none xp-min-w-[1.5rem]">{{{xphtml}}}</div>
                <div class="xp-flex-1 xp-mx-2">{{description}}</div>
            </div>
        {{/recentactivities}}
        </div>
    {{/hasrecentactivities}}
</div>